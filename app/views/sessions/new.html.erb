<div class="row">
  <div class="col s4 push-s4">
    <div class="card login-card">
      <div class="card-content">
        <span class="card-title">Login</span>
          <br />
          <%= form_with url: sessions_path, local: true do |f| %>
          <div class="control-group">
            <%= f.label :username %>
            <div class="controls">
              <%= f.text_field :username %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password %>
            <div class="controls">
              <%= f.password_field :password %>
            </div>
          </div>
          
          <!-- <div class="actions login-submit"><%= f.submit "Log In" %></div> -->
          
          
          <div style="text-align:center;">
          <%= link_to "Log in", home_path, class: 'waves-effect waves-light btn login-btn' %></br></br></br>

          <p id="login-text" >New to The Baking Factory?</p></br>

          <%= link_to "Create your account", new_customer_path, class: 'waves-effect waves-light btn login-btn' %> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>