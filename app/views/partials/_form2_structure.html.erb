<div class="row">
  <div class="col s8">
    <div class="controls card">    
      <div class="card-content">
        <span class="card-title"><%= type_of_form %></span>
        <%= simple_form_for(object) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "#{fields1}", locals: { f: f } %>
            </div>
          </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="controls card">
          <div class="row">
            <div class="card-content">
              <span class="card-title">&nbsp;&nbsp;<%= section_2 %></span>
              <div class="form-inputs">
                <%= render partial: "#{fields2}", locals: { f: f } %>
              </div>
            </div>
          </div>    
        </div>              
      </div>
    </div>

      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit, value: "Create account" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', :back %>