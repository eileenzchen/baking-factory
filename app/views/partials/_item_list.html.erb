<% unless items.nil? || items.empty? %>
  <table class="table">
   
    </br>
    
    <tbody>
      <% items.each do |item| %>
        <tr>
          <% item_type = item.category.downcase %>
          <% if item.picture.nil? %>
            <td width="130"><%= link_to image_tag("img-not-found.png", :size => "100x100"), item_path(item) %></td>
          <% else %>
            <td width="130"><%= link_to image_tag(item.picture, :size => "100x100"), item_path(item) %></td>
          <% end %>

          <td style="vertical-align: top" width="400"><%= link_to item.name, item_path(item), class: "link align-left"  %>
            </br>
            <%= number_to_currency item.current_price, class: "align-left" %>
          
            </br>
            <%= item.units_per_item %> <%= item_type == 'bread' ? 'loaf' : item_type %>
          </td>

          <% if logged_in? && current_user.role?(:customer) || current_user.role?(:admin) %>
            <td>
              <%= link_to(add_item_path(item.id), class: 'btn button tiny radius') do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

