<% unless items.nil? || items.empty? %>
  <table class="table">
   
    </br>
    
    <tbody>
      <% items.each_slice(2) do |item| %>
        <% item1 = item.first %>
        <% item2 = item.last %>

        <tr>

          <% item1_type = item1.category.downcase %>
          <% item2_type = item2.category.downcase %>
          
          <% if item1.picture.nil? %>
            <td width="140"><%= link_to image_tag("img-not-found.png", :size => "130x130"), item_path(item1) %></td>
          <% else %>
            <td width="140"><%= link_to image_tag(item1.picture, :size => "130x130"), item_path(item1) %></td>
          <% end %>

          <td style="vertical-align: top; float: left;"><%= link_to item1.name, item_path(item1), class: "link align-left"  %>
            </br>
            <%= number_to_currency item1.current_price, class: "align-left" %>
          
            </br>
            <%= item1.units_per_item %> <%= item1_type == 'bread' ? 'loaf' : item1_type %></br></br>
  
          

           <% if logged_in? && (current_user.role?(:customer) || current_user.role?(:admin)) %>
  
              <%= link_to(add_item_path(item1.id), class: 'btn button tiny radius') do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>

            <% end %>
          </td>
          

          <% if item1 != item2 %>

            <% if item2.picture.nil? %>
              <td width="140"><%= link_to image_tag("img-not-found.png", :size => "130x130"), item_path(item2) %></td>
            <% else %>
              <td width="140"><%= link_to image_tag(item2.picture, :size => "130x130"), item_path(item2) %></td>
            <% end %>

            <td style="vertical-align: top"><%= link_to item2.name, item_path(item2), class: "link align-left"  %>
              </br>
              <%= number_to_currency item2.current_price, class: "align-left" %>
            
              </br>
              <%= item2.units_per_item %> <%= item2_type == 'bread' ? 'loaf' : item2_type %></br></br>
            

             <% if logged_in? && (current_user.role?(:customer) || current_user.role?(:admin)) %>
          
                <%= link_to(add_item_path(item2.id), class: 'btn button tiny radius') do %>
                  &nbsp;Add to Cart&nbsp;
                <% end %>
         
              <% end %>
            </td>
          <% end %>

        </tr>

      <% end %>
    </tbody>
  </table>
<% end %>

