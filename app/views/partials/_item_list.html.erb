<% unless items.nil? || items.empty? %>
  <table class="table">
   
      <tr>
        <th width="160"></th>
        <th class="align-left" width="200"></th>
        <th class="align-left" width="75"></th>
        <th class="align-left" width="100"></th>
        <% if controller.controller_name == 'orders' %>
          <th width="100">&nbsp;</th>
        <% end %>
      </tr>
    
    <tbody>
      <% items.each do |item| %>
        <tr>
          <% if item.picture.nil? %>
            <td width="150"><%= link_to image_tag("img-not-found.png", :size => "100x100"), item_path(item) %></td>
          <% else %>
            <td width="150"><%= link_to image_tag(item.picture, :size => "100x100"), item_path(item) %></td>
          <% end %>
          <td width="250"><%= link_to item.name, item_path(item), class: "link align-left"  %></td>
          <td><%= number_to_currency item.current_price, class: "align-left" %></td>
          <% item_type = item.category.downcase %>
          <td><%= item.units_per_item %> <%= item_type == 'bread' ? 'loaf' : item_type %></td>
          <% if controller.controller_name == 'orders' %>
            <td>
              <%= link_to(add_to_cart_path(item.id), class: 'button tiny radius') do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>



    