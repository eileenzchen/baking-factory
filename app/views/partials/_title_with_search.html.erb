<div class="row">
<div class="col s7">
  <h5 style="padding-left: 11px;"><%= title %></h5>
</div>
<div class="col s5 controls" style="padding-right:25px;">

      <%= form_with url: search_path, method: :get, class: "form-inline", id: "search" do %>
          <% if current_user.nil? || current_user.role?(:customer) %>
            <%= text_field_tag 'query', '', placeholder: "e.g. bread, blueberry muffins ..." %>
          <% end %>
          <% if logged_in? && current_user.role?(:admin) %>
            <%= text_field_tag 'query', '', placeholder: "e.g. bread, Adam ..." %>
          <% end %>
          <!-- submitting via js (press enter) so not using... -->
          <%# submit_tag('Find') %>
        
      <% end %>

</div>
</div>