<h5>Users at The Baking Factory</h5>

<table class="striped highlight">
  <thead>
    <th>Username</th>
    <th>Role</th>
    <th>Active?</th>
    <th></th>
  </thead>
  <% for user in @all_users %>
    <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
      <td><%= user.username %></td>
      <td><%= user.role %></td>
      <td><%= user.active ? "Yes" : "No" %></td>
      <td>
        <% if can? :edit, user %>
          <%= link_to edit_user_path(user) do %>
            <i class="material-icons">edit</i>
          <% end %> 
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<p class="supertiny"></p>
<br />
<%= will_paginate @all_users, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<p class="supertiny"></p>
<br />
<%= render :partial => "partials/add_new_object", locals: {model_name: 'user'} %>