<div class="row">
	<div class="col s6">

		<div class="card">
			<div class="card-content">
				<span class="card-title">Items</span>
			
				<%= column_chart OrderItem.joins(:item).group(:name).count,
					adapter: "highcharts",
					title: "Items Sold (By Total Quantity Purchased)",
					colors: ['brown'],
					library: {
						yAxis: {
												title: "Total Quantity Purchased",
                      
										},
						xAxis: {
											 title: "Item",
											
									 },
						tooltip: {
							pointFormat: 'Times Bought: <b>{point.y}</b>'
						}
					}
				%>
								
			</div>
		</div>
	
	</div>

		
	<div class="col s6">

		<div class="card">
			<div class="card-content">
				<span class="card-title">Customers</span>

				<%= pie_chart Customer.joins(:orders).group(:customer_id).limit(10).count,
					adapter: "highcharts",
					title: "Top 10 Customers",
					colors: ['brown'],
					library: {
						yAxis: {
												title: "Total Quantity Purchased",
											
										},
						xAxis: {
											title: "Item",
											
									},
						tooltip: {
							pointFormat: 'Times Bought: <b>{point.y}</b>'
						}
					}
				%>
								
			</div>
		</div>

	</div>

</div>

<div class="row">
	<div class="col s12">

		<div class="card">
			<div class="card-content">
				<span class="card-title">Sales</span>

				<%= line_chart OrderItem.joins(:order).group(:date).count,
					adapter: "highcharts",
					title: "Total Sales Per Day",
					colors: ['brown'],
					library: {
						yAxis: {
												title: "Total Quantity Purchased",
											
										},
						xAxis: {
											title: "Item",
											
									},
						tooltip: {
							pointFormat: 'Times Bought: <b>{point.y}</b>'
						}
					}
				%>
								
			</div>
		</div>

	</div>
</div>
