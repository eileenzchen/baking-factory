<div class="row">    
  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Your cart</span>
        
        <%=render :partial => "cart_items"%>
       
            
      </div>
      
    </div>
    <% if @items_in_cart.empty? %>
      <% if current_user.role?(:customer) %>
        <%= link_to(home_path, class: 'btn button tiny radius') do %>
          Continue shopping
        <% end %>
      <% else %>
        <%= link_to(items_path, class: 'btn button tiny radius') do %>
          Continue shopping
        <% end %>
      <% end %>

    <% else %>

      <% if current_user.role?(:customer) %>
        <%= link_to(home_path, class: 'btn button tiny radius') do %>
          Continue shopping
        <% end %>
      <% else %>
        <%= link_to(items_path, class: 'btn button tiny radius') do %>
          Continue shopping
        <% end %>
      <% end %>

      <div style="float: right">
        <%= link_to(empty_cart_path, class: 'btn button tiny radius') do %>
          Empty cart
        <% end %>
      </div>

    <% end %>
  </div>
  <div class="col s4">
    <%=render :partial => "order_summary"%>
    <%= link_to(checkout_path, class: 'btn button tiny radius', style: "width: 100%") do %>
      Checkout
    <% end %>
  </div> 
  
</div>






    