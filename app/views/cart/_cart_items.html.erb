<% if @items_in_cart.empty? %>
  <h4>Your cart is currently empty.</h4>
<% else %>
  <table class="table">
   
      <tr>
        <th width="160">Item</th>
        <th class="align-left" width="200">Name</th>
        <th class="align-left" width="50">Price</th>
        <th class="align-left" width="100">Quantity</th>
        <% if logged_in? && current_user.role?(:customer) || current_user.role?(:admin) %>
          <th width="100">&nbsp;</th>
        <% end %>
      </tr>
    
    <tbody>
      <% items.each do |item| %>
        <tr>
          <% if item.picture.nil? %>
            <td width="120"><%= link_to image_tag("img-not-found.png", :size => "100x100"), item_path(item) %></td>
          <% else %>
            <td width="120"><%= link_to image_tag(item.picture, :size => "100x100"), item_path(item) %></td>
          <% end %>
          <td width="215"><%= link_to item.name, item_path(item), class: "link align-left"  %></td>
          <td width="100"><%= number_to_currency item.current_price, class: "align-left" %></td>
          <% item_type = item.category.downcase %>
          <td width="120"><%= item.units_per_item %> <%= item_type == 'bread' ? 'loaf' : item_type %></td>
          <% if logged_in? && current_user.role?(:customer) || current_user.role?(:admin) %>
            <td>
              <%= link_to(add_item_path(item.id), class: 'btn button tiny radius') do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>