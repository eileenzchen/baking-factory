<%= simple_form_for @customer, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Customer</legend>

    <%= f.input :first_name, input_html: {class: "avg"}, label_html: {class: "active"} %>
    <%= f.input :last_name, input_html: {class: "avg"}, label_html: {class: "active"} %>
    <%= f.input :phone, input_html: {class: "avg"}, label_html: {class: "active"} %>
    <%= f.input :email, input_html: {class: "avg"}, label_html: {class: "active"} %>
    <%= f.input :active %>
    


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', customers_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>